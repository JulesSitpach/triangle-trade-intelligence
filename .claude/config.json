{
  "development": {
    "enforceSequentialTesting": true,
    "blockCompletionWithoutTests": true,
    "requireRealDataValidation": true,
    "mandatoryTestSteps": [
      "component-render",
      "api-response",
      "integration",
      "end-to-end"
    ],
    "componentPriority": [
      "USMCACertificateTab",
      "HSClassificationTab",
      "CrisisResponseTab",
      "ManufacturingFeasibilityTab",
      "MarketEntryTab"
    ]
  },
  "testing": {
    "traceAllAPICalls": true,
    "logDataFlow": true,
    "validateRealConnections": true,
    "failOnMockData": true,
    "requireCSSCompliance": true,
    "blockInlineStyles": true,
    "enforceDatabaseFirst": true
  },
  "validation": {
    "cssRules": {
      "allowInlineStyles": false,
      "allowTailwind": false,
      "requireExistingClasses": true,
      "enforceAdminWorkflows": true
    },
    "performanceTargets": {
      "apiResponse": 400,
      "databaseQuery": 200,
      "pageLoad": 3000,
      "componentRender": 100
    },
    "dataRequirements": {
      "noMockData": true,
      "noHardcodedValues": true,
      "useConfigurationObjects": true,
      "requireRealDatabaseConnections": true
    }
  },
  "enforcement": {
    "scriptPath": "scripts/enforce-protocol.js",
    "autoRunOnSave": true,
    "blockCommitOnFailure": true,
    "generateReports": true
  },
  "reporting": {
    "generateScreenshots": true,
    "logAllTests": true,
    "trackRegressions": true,
    "includePerformanceMetrics": true
  }
}
{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
      }
    }
  },
  "triangle-intelligence": {
    "baseUrl": "http://localhost:3000",
    "testDir": "./tests/e2e",
    "outputDir": "./test-results",
    "timeout": 30000,
    "retries": 2,
    "projects": [
      {
        "name": "desktop-chrome",
        "viewport": { "width": 1920, "height": 1080 }
      },
      {
        "name": "mobile-iphone",
        "viewport": { "width": 375, "height": 667 }
      }
    ]
  }
}
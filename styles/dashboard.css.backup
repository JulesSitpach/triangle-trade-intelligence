/* ================== DASHBOARD SYSTEM ================== */

/* Dashboard Layout */
.dashboard-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--space-8) var(--space-4);
  background-color: var(--gray-50);
}

.dashboard-header {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  margin-bottom: var(--space-6);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
}

.dashboard-title {
  font-size: 1.875rem;
  font-weight: 600;
  color: var(--navy-900);
  margin-bottom: var(--space-2);
}

.dashboard-subtitle {
  color: var(--gray-600);
  font-size: 1rem;
  line-height: 1.5;
}

/* Workflow Progress */
.workflow-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: var(--space-2) !important;    /* Was space-3, now space-2 (8px) */
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-2) !important; /* Was space-3, now space-2 (8px) */
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  position: relative;
}

.workflow-progress::before {
  content: '';
  position: absolute;
  top: 50%;
  left: var(--space-6);
  right: var(--space-6);
  height: 2px;
  background: var(--gray-300);
  z-index: 0;
}

.workflow-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
  flex: 1;
}

.workflow-step-indicator {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: white;
  border: 2px solid var(--gray-300);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  color: var(--gray-600);
  margin-bottom: var(--space-1);
  transition: all 0.2s ease;
  font-size: 0.875rem;
}

.workflow-step.active .workflow-step-indicator {
  background: var(--blue-500);
  border-color: var(--blue-500);
  color: white;
}

.workflow-step.completed .workflow-step-indicator {
  background: var(--green-600);
  border-color: var(--green-600);
  color: white;
}

.workflow-step-label {
  font-size: 0.75rem;
  color: var(--gray-600);
  text-align: center;
  font-weight: 500;
  white-space: nowrap;
  margin-top: var(--space-1);
}

.workflow-step.active .workflow-step-label {
  color: var(--navy-900);
  font-weight: 600;
}

.workflow-step.clickable {
  cursor: pointer;
}

.workflow-step.clickable:hover .workflow-step-indicator {
  background: var(--blue-600);
  border-color: var(--blue-600);
  transform: scale(1.1);
}

/* Form Sections */
.form-section {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--space-2);
  margin-bottom: var(--space-2);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
}

.form-section-title {
  font-size: 1rem;
  font-weight: 600;
  color: var(--navy-900);
  margin-bottom: var(--space-1);
  padding-bottom: var(--space-1);
  border-bottom: 1px solid var(--gray-200);
}

.form-section-description {
  color: var(--gray-600);
  font-size: 0.75rem;
  margin-bottom: var(--space-2);
  line-height: 1.3;
}

/* Form Grid Layouts */
.form-grid-2 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-4);
}

.form-grid-3 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-4);
}

/* Enhanced Form Elements */
.form-group {
  margin-bottom: var(--space-2);
}

.form-label {
  display: block;
  font-size: 0.8rem;
  font-weight: 500;
  color: var(--navy-700);
  margin-bottom: 0.25rem;
}

.form-label.required::after {
  content: ' *';
  color: #dc2626;
}

.form-input,
.form-select,
.form-textarea {
  width: 100%;
  padding: 0.375rem 0.5rem;
  min-height: 32px;
  font-size: 1rem;
  border: 2px solid var(--gray-300);
  border-radius: var(--radius-base);
  background: white;
  transition: all 0.15s ease;
  font-family: 'Roboto', sans-serif;
}

.form-input:focus,
.form-select:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--blue-500);
  box-shadow: 0 0 0 3px rgba(0, 156, 235, 0.1);
}

.form-input.error,
.form-select.error,
.form-textarea.error {
  border-color: #dc2626;
  background: #fef2f2;
}

.form-input.success,
.form-select.success,
.form-textarea.success {
  border-color: var(--green-600);
  background: var(--green-50);
}

.form-help {
  font-size: 0.75rem;
  color: var(--gray-600);
  margin-top: 0.125rem;
}

.form-error {
  font-size: 0.875rem;
  color: #dc2626;
  margin-top: var(--space-1);
}

/* Dashboard Actions */
.dashboard-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-4) 0;
  border-top: 1px solid var(--gray-200);
  margin-top: var(--space-6);
}

.dashboard-actions-left {
  display: flex;
  gap: var(--space-3);
}

.dashboard-actions-right {
  display: flex;
  gap: var(--space-3);
}

/* Hero Section - AGGRESSIVE COMPRESSION */
.hero-section {
  padding-top: 8px !important;    /* Was 120px -> 40px -> 20px, now 8px */
  padding-bottom: 8px !important;  /* Minimal bottom padding */
}

.section-header {
  margin-bottom: 0.5rem !important;  /* Was 4rem -> 2rem -> 1rem, now 0.5rem */
  text-align: center;
}

.page-title {
  font-size: 1.5rem !important;     /* Was 2.25rem -> 1.75rem, now 1.5rem */
  margin-bottom: 0.25rem !important; /* Was 1.25rem -> 0.5rem, now 0.25rem */
  font-weight: 600;
  color: var(--navy-900);
}

.page-subtitle {
  font-size: 1rem !important;       /* Smaller subtitle */
  margin-bottom: 0.5rem !important;  /* Minimal margin */
  color: var(--gray-600);
}

.page-description {
  font-size: 0.875rem !important;   /* Much smaller description */
  line-height: 1.3 !important;      /* Tight line height */
  margin-bottom: 1rem !important;   /* Reduced from large margin */
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  color: var(--gray-600);
}

/* Status Cards */
.status-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-2) !important;    /* Was space-3, now space-2 (8px) */
  margin-bottom: var(--space-2) !important; /* Was space-4, now space-2 (8px) */
}

.status-card {
  background: white;
  padding: var(--space-2) !important;  /* Was space-3, now space-2 (8px) */
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  text-align: center;
}

.status-value {
  font-size: 1.25rem !important;  /* Was 1.5rem, now 1.25rem */
  font-weight: 700;
  margin-bottom: 2px !important;   /* Was space-1 (4px), now 2px */
}

.status-value.success { color: var(--green-600); }
.status-value.warning { color: var(--amber-600); }
.status-value.info { color: var(--blue-600); }
.status-value.primary { color: var(--navy-600); }

.status-label {
  font-size: 0.875rem;
  color: var(--gray-600);
  font-weight: 500;
}

/* Data Tables */
.data-table-container {
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  margin-bottom: var(--space-6);
}

.data-table {
  width: 100%;
  border-collapse: collapse;
}

.data-table thead {
  background: var(--gray-50);
}

.data-table th {
  padding: var(--space-4);
  text-align: left;
  font-weight: 600;
  color: var(--navy-900);
  font-size: 0.875rem;
  border-bottom: 1px solid var(--gray-200);
}

.data-table td {
  padding: var(--space-4);
  border-bottom: 1px solid var(--gray-100);
  color: var(--gray-700);
}

.data-table tbody tr:hover {
  background: var(--gray-50);
}

/* Alert System */
.alert {
  padding: var(--space-4);
  border-radius: var(--radius-base);
  margin-bottom: var(--space-4);
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
}

.alert-info {
  background: rgba(59, 130, 246, 0.1);
  border-left: 4px solid var(--blue-500);
  color: var(--navy-700);
}

.alert-success {
  background: rgba(34, 197, 94, 0.1);
  border-left: 4px solid var(--green-600);
  color: var(--green-700);
}

.alert-warning {
  background: rgba(245, 158, 11, 0.1);
  border-left: 4px solid var(--amber-600);
  color: var(--amber-700);
}

.alert-error {
  background: rgba(239, 68, 68, 0.1);
  border-left: 4px solid #dc2626;
  color: #991b1b;
}

.alert-icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.alert-content {
  flex: 1;
}

.alert-title {
  font-weight: 600;
  margin-bottom: var(--space-1);
}

/* Badge System */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.badge-success {
  background: var(--green-100);
  color: var(--green-700);
}

.badge-warning {
  background: var(--amber-100);
  color: var(--amber-700);
}

.badge-info {
  background: var(--blue-100);
  color: var(--blue-700);
}

.badge-error {
  background: #fef2f2;
  color: #991b1b;
}

/* Loading States */
.loading-spinner {
  border: 3px solid var(--gray-200);
  border-top-color: var(--blue-500);
  border-radius: 50%;
  width: 32px;
  height: 32px;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-overlay {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* Component Origins Enhanced Styles */
.form-input-group {
  display: flex;
  align-items: center;
}

.form-input-suffix {
  color: var(--gray-600);
  margin-left: var(--space-2);
  font-size: 0.875rem;
}

.form-input-container {
  position: relative;
}

.hs-suggestions-container {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-base);
  margin-top: var(--space-2);
  max-height: 200px;
  overflow-y: auto;
  box-shadow: var(--shadow-sm);
}

.hs-suggestions-header {
  padding: var(--space-2);
  border-bottom: 1px solid var(--gray-200);
  color: var(--gray-600);
  font-size: 0.75rem;
  background: var(--gray-50);
}

.hs-suggestion-button {
  width: 100%;
  text-align: left;
  padding: var(--space-2);
  border: none;
  background: white;
  border-bottom: 1px solid var(--gray-100);
  cursor: pointer;
  transition: background-color 0.15s ease;
}

.hs-suggestion-button:hover {
  background: var(--gray-50);
}

.hs-suggestion-button:last-child {
  border-bottom: none;
}

.hs-suggestion-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.hs-suggestion-info {
  flex: 1;
}

.hs-code-display {
  font-weight: 500;
  font-size: 0.875rem;
  color: var(--navy-900);
  margin-bottom: var(--space-1);
}

.hs-description {
  font-size: 0.75rem;
  color: var(--gray-600);
  line-height: 1.3;
}

.hs-confidence {
  margin-left: var(--space-2);
  flex-shrink: 0;
}

.hs-rates-display {
  font-size: 0.75rem;
  color: var(--gray-600);
  margin-top: var(--space-1);
}

.add-component-button {
  width: 100%;
  padding: var(--space-3);
  border: 2px dashed var(--gray-300);
  background: transparent;
  border-radius: var(--radius-base);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  color: var(--gray-600);
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
}

.add-component-button:hover {
  border-color: var(--blue-400);
  color: var(--blue-600);
  background: var(--blue-50);
}

.percentage-summary {
  padding: var(--space-4);
  border-radius: var(--radius-lg);
  border: 1px solid;
  margin-bottom: var(--space-4);
}

.percentage-summary.success {
  border-color: var(--green-200);
  background-color: var(--green-50);
}

.percentage-summary.warning {
  border-color: var(--amber-200);
  background-color: var(--amber-50);
}

.percentage-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-2);
}

.percentage-label {
  font-weight: 600;
  color: var(--navy-900);
}

.percentage-value {
  font-size: 1.125rem;
  font-weight: 700;
}

.percentage-summary.success .percentage-value {
  color: var(--green-700);
}

.percentage-summary.warning .percentage-value {
  color: var(--amber-700);
}

.btn-primary.disabled,
.btn-secondary.disabled {
  opacity: 0.5;
  cursor: not-allowed;
  pointer-events: none;
}

/* Professional Input Groups */
.professional-input-group {
  position: relative;
}

.form-label {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: 0.8rem;
  font-weight: 500;
  color: var(--navy-700);
  margin-bottom: 0.25rem;
}

.form-label svg {
  color: var(--blue-500);
  flex-shrink: 0;
}

.alert-icon svg {
  color: inherit;
}

/* Executive Summary Styles */
.savings-summary-card {
  background: linear-gradient(135deg, var(--green-50) 0%, rgba(255, 255, 255, 0.8) 100%);
  border: 1px solid var(--green-200);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-md);
}

.savings-metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

.savings-metric-card {
  text-align: center;
  padding: var(--space-4);
  background: white;
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  transition: all 0.2s ease;
}

.savings-metric-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.savings-metric-card.primary {
  border-left: 4px solid var(--green-500);
}

.metric-value {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: var(--space-2);
  color: var(--navy-900);
}

.metric-value.success {
  color: var(--green-700);
}

.metric-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--gray-600);
}

.tariff-rates-comparison {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-4);
  padding-top: var(--space-4);
  border-top: 1px solid var(--green-200);
}

.rate-comparison-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-2);
  background: rgba(255, 255, 255, 0.6);
  border-radius: var(--radius-base);
}

.rate-label {
  font-weight: 500;
  color: var(--gray-700);
}

.rate-value {
  font-weight: 700;
  font-size: 1.125rem;
}

.rate-value.warning {
  color: var(--amber-700);
}

.rate-value.success {
  color: var(--green-700);
}

/* Qualification Status Styles */
.qualification-card {
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-md);
  border: 2px solid;
}

.qualification-card.success {
  background: linear-gradient(135deg, var(--green-50) 0%, rgba(255, 255, 255, 0.8) 100%);
  border-color: var(--green-300);
}

.qualification-card.warning {
  background: linear-gradient(135deg, var(--amber-50) 0%, rgba(255, 255, 255, 0.8) 100%);
  border-color: var(--amber-300);
}

.qualification-status {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-6);
  padding: var(--space-3);
  background: rgba(255, 255, 255, 0.7);
  border-radius: var(--radius-base);
}

.qualification-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.status-text {
  font-size: 1.5rem;
  font-weight: 700;
  letter-spacing: 0.05em;
}

.status-text.qualified {
  color: var(--green-800);
}

.status-text.not-qualified {
  color: var(--amber-800);
}

.qualification-details {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.qualification-detail-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: var(--space-3);
  background: rgba(255, 255, 255, 0.6);
  border-radius: var(--radius-base);
}

.detail-label {
  font-weight: 500;
  color: var(--gray-700);
  flex-shrink: 0;
  margin-right: var(--space-4);
}

.detail-value {
  font-weight: 600;
  color: var(--navy-900);
  text-align: right;
  flex: 1;
}

.documentation-section {
  background: rgba(255, 255, 255, 0.6);
  padding: var(--space-4);
  border-radius: var(--radius-base);
}

.documentation-list {
  list-style: disc;
  list-style-position: inside;
  margin-top: var(--space-2);
  color: var(--gray-700);
}

.documentation-list li {
  margin-bottom: var(--space-1);
  line-height: 1.4;
}

/* Responsive Dashboard */
@media (max-width: 768px) {
  .dashboard-container {
    padding: var(--space-4) var(--space-2);
  }
  
  .workflow-progress {
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .workflow-progress::before {
    display: none;
  }
  
  .form-grid-2,
  .form-grid-3 {
    grid-template-columns: 1fr;
  }
  
  .status-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }
  
  .dashboard-actions {
    flex-direction: column;
    gap: var(--space-4);
    align-items: stretch;
  }
  
  .dashboard-actions-left,
  .dashboard-actions-right {
    justify-content: center;
  }
  
  .data-table-container {
    overflow-x: auto;
  }
  
  .data-table {
    min-width: 600px;
  }
}
/* ================== DASHBOARD NAVIGATION ================== */

.dashboard-nav {
  background: rgba(13, 39, 77, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 0;
  z-index: 100;
}

.dashboard-nav-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-4);
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 64px;
}

.dashboard-nav-brand {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  color: white;
  text-decoration: none;
}

.dashboard-nav-logo {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 700;
  font-size: 1.1rem;
}

.dashboard-nav-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: white;
}

.dashboard-nav-menu {
  display: flex;
  align-items: center;
  gap: var(--space-6);
  flex-shrink: 0;
  justify-content: center;
}

.dashboard-nav-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: none;
  font-weight: 500;
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-base);
  transition: color 0.15s ease, background-color 0.15s ease;
  white-space: nowrap;
  display: inline-block;
  min-width: max-content;
}

.dashboard-nav-link:hover {
  color: white;
  background: rgba(255, 255, 255, 0.1);
}

.dashboard-nav-link.active {
  color: white;
  background: rgba(255, 255, 255, 0.15);
  font-weight: 500;
}

.dashboard-nav-user {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  flex-shrink: 0;
  min-width: max-content;
}

.dashboard-nav-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: var(--gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 0.875rem;
}

.dashboard-nav-dropdown {
  position: relative;
}

.dashboard-nav-dropdown-menu {
  position: absolute;
  top: 100%;
  right: 0;
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  padding: var(--space-2);
  min-width: 200px;
  z-index: 50;
}

.dashboard-nav-dropdown-item {
  display: block;
  padding: var(--space-2) var(--space-3);
  color: var(--gray-700);
  text-decoration: none;
  border-radius: var(--radius-base);
  transition: all 0.15s ease;
}

.dashboard-nav-dropdown-item:hover {
  background: var(--gray-100);
  color: var(--navy-900);
}

.nav-dropdown-divider {
  border-top: 1px solid var(--gray-200);
  margin: var(--space-2) 0;
}

/* Mobile Dashboard Navigation */
@media (max-width: 768px) {
  .dashboard-nav-menu {
    display: none;
  }
  
  .dashboard-nav-mobile-menu {
    position: fixed;
    top: 64px;
    left: 0;
    right: 0;
    background: white;
    border-bottom: 1px solid var(--gray-200);
    padding: var(--space-4);
    display: none;
    flex-direction: column;
    gap: var(--space-2);
    z-index: 40;
  }
  
  .dashboard-nav-mobile-menu.open {
    display: flex;
  }
}
/* ================== ALERTS PAGE ================== */

.alerts-container {
  max-width: 1000px;
  margin: 0 auto;
  padding: var(--space-6) var(--space-4);
}

.alerts-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-6);
}

.alerts-title {
  font-size: 1.875rem;
  font-weight: 600;
  color: var(--navy-900);
}

.alerts-actions {
  display: flex;
  gap: var(--space-3);
  align-items: center;
}

.alerts-filter {
  padding: var(--space-2) var(--space-3);
  border: 1px solid var(--gray-300);
  border-radius: var(--radius-base);
  background: white;
  font-size: 0.875rem;
}

.alerts-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.alert-item {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-lg);
  padding: var(--space-5);
  box-shadow: var(--shadow-sm);
  transition: all 0.15s ease;
}

.alert-item:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-1px);
}

.alert-item.unread {
  border-left: 4px solid var(--blue-500);
  background: rgba(59, 130, 246, 0.02);
}

.alert-item.critical {
  border-left: 4px solid #dc2626;
  background: rgba(239, 68, 68, 0.02);
}

.alert-item.warning {
  border-left: 4px solid var(--amber-600);
  background: rgba(245, 158, 11, 0.02);
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-3);
}

.alert-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--navy-900);
  margin-bottom: var(--space-1);
}

.alert-timestamp {
  font-size: 0.875rem;
  color: var(--gray-600);
  white-space: nowrap;
}

.alert-content {
  color: var(--gray-700);
  line-height: 1.5;
  margin-bottom: var(--space-3);
}

.alert-actions {
  display: flex;
  gap: var(--space-2);
  align-items: center;
}

.alert-btn {
  padding: var(--space-1) var(--space-3);
  font-size: 0.875rem;
  border-radius: var(--radius-base);
  border: none;
  cursor: pointer;
  transition: all 0.15s ease;
}

.alert-btn-primary {
  background: var(--blue-500);
  color: white;
}

.alert-btn-primary:hover {
  background: var(--blue-600);
}

.alert-btn-secondary {
  background: transparent;
  color: var(--gray-600);
  border: 1px solid var(--gray-300);
}

.alert-btn-secondary:hover {
  background: var(--gray-100);
}

.alerts-empty {
  text-align: center;
  padding: var(--space-12);
  color: var(--gray-600);
}

.alerts-empty-icon {
  font-size: 3rem;
  margin-bottom: var(--space-4);
  opacity: 0.5;
}

/* Alert Categories */
.alert-category {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.5rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
  margin-bottom: var(--space-2);
}

.alert-category.trade {
  background: var(--blue-100);
  color: var(--blue-700);
}

.alert-category.compliance {
  background: var(--green-100);
  color: var(--green-700);
}

.alert-category.system {
  background: var(--gray-100);
  color: var(--gray-700);
}

.alert-category.security {
  background: var(--amber-100);
  color: var(--amber-700);
}

/* Responsive */
@media (max-width: 768px) {
  .alerts-header {
    flex-direction: column;
    gap: var(--space-4);
    align-items: stretch;
  }
  
  .alerts-actions {
    justify-content: space-between;
  }
  
  .alert-header {
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .alert-actions {
    flex-wrap: wrap;
  }
}
}

.partnership-company-location {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
  margin-bottom: var(--space-sm);
}

.partnership-industry-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-xs);
  margin-bottom: var(--space-md);
}

.partnership-industry-tag {
  background: rgba(14, 165, 233, 0.1);
  color: var(--bloomberg-blue);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.025em;
  border: 1px solid rgba(14, 165, 233, 0.2);
}

.partnership-priority-badge {
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border: 1px solid;
}

.partnership-priority-badge.high {
  background: rgba(239, 68, 68, 0.1);
  color: var(--bloomberg-red);
  border-color: var(--bloomberg-red);
}

.partnership-priority-badge.medium {
  background: rgba(255, 170, 0, 0.1);
  color: var(--bloomberg-yellow);
  border-color: var(--bloomberg-yellow);
}

.partnership-priority-badge.featured {
  background: rgba(34, 197, 94, 0.1);
  color: var(--bloomberg-green);
  border-color: var(--bloomberg-green);
}

/* Partnership Metrics Grid */
.partnership-metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-md);
  margin-bottom: var(--space-lg);
}

.partnership-metric {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  padding: var(--space-md);
  background: var(--bloomberg-gray-900);
  border-radius: var(--radius-md);
  border: 1px solid var(--bloomberg-gray-700);
}

.partnership-metric-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  font-family: var(--font-data);
  line-height: 1;
}

.partnership-metric-value.success {
  color: var(--bloomberg-green);
}

.partnership-metric-value.warning {
  color: var(--bloomberg-yellow);
}

.partnership-metric-value.error {
  color: var(--bloomberg-red);
}

.partnership-metric-label {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

/* Partnership Capabilities */
.partnership-capabilities {
  margin-bottom: var(--space-lg);
}

.partnership-capabilities-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--bloomberg-gray-300);
  margin-bottom: var(--space-sm);
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.partnership-capabilities-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.partnership-capability-item {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  font-size: 0.875rem;
  color: var(--bloomberg-gray-300);
}

.partnership-capability-icon {
  width: 16px;
  height: 16px;
  color: var(--bloomberg-green);
  flex-shrink: 0;
}

/* Partnership Actions */
.partnership-actions {
  display: flex;
  gap: var(--space-sm);
  margin-top: var(--space-lg);
  padding-top: var(--space-md);
  border-top: 1px solid var(--bloomberg-gray-700);
}

.partnership-btn-primary {
  flex: 1;
  background: linear-gradient(135deg, var(--bloomberg-blue), var(--bloomberg-blue-light));
  color: white;
  border: 1px solid var(--bloomberg-blue);
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  transition: all var(--transition-fast);
  cursor: pointer;
}

.partnership-btn-primary:hover {
  background: linear-gradient(135deg, var(--bloomberg-blue-dark), var(--bloomberg-blue));
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
}

.partnership-btn-secondary {
  flex: 1;
  background: transparent;
  color: var(--bloomberg-gray-300);
  border: 1px solid var(--bloomberg-gray-600);
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  transition: all var(--transition-fast);
  cursor: pointer;
}

.partnership-btn-secondary:hover {
  background: var(--bloomberg-gray-700);
  color: var(--bloomberg-gray-100);
  border-color: var(--bloomberg-gray-500);
}

/* Partnership Network Visualization */
.partnership-network-overview {
  background: linear-gradient(145deg, var(--bloomberg-gray-800), var(--bloomberg-gray-900));
  border: 1px solid var(--bloomberg-blue-light);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  margin-bottom: var(--space-2xl);
}

.partnership-network-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-xl);
  padding-bottom: var(--space-lg);
  border-bottom: 1px solid var(--bloomberg-gray-700);
}

.partnership-network-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.partnership-network-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, 150px);
  gap: var(--space-lg);
  justify-content: center;
}

.partnership-network-stat {
  text-align: center;
  padding: var(--space-lg);
  background: var(--bloomberg-gray-900);
  border-radius: var(--radius-md);
  border: 1px solid var(--bloomberg-gray-700);
}

.partnership-network-stat-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--bloomberg-blue);
  font-family: var(--font-data);
  line-height: 1;
  margin-bottom: var(--space-sm);
}

.partnership-network-stat-label {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

/* Partnership Filtering & Search */
.partnership-controls {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-lg);
  align-items: center;
  justify-content: space-between;
  background: var(--bloomberg-gray-800);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--bloomberg-gray-700);
  margin-bottom: var(--space-2xl);
}

.partnership-search {
  flex: 1;
  min-width: 300px;
}

.partnership-search-input {
  width: 100%;
  padding: var(--space-md);
  border: 1px solid var(--bloomberg-blue-light);
  border-radius: var(--radius-md);
  background: var(--bloomberg-gray-200);
  color: var(--bloomberg-gray-900);
  font-size: 0.875rem;
  transition: border-color var(--transition-fast);
}

.partnership-search-input:focus {
  outline: none;
  border-color: var(--bloomberg-blue);
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

.partnership-filters {
  display: flex;
  gap: var(--space-md);
  flex-wrap: wrap;
}

.partnership-filter {
  padding: var(--space-sm) var(--space-md);
  border: 1px solid var(--bloomberg-gray-600);
  border-radius: var(--radius-md);
  background: transparent;
  color: var(--bloomberg-gray-300);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.partnership-filter:hover {
  border-color: var(--bloomberg-blue);
  color: var(--bloomberg-gray-100);
}

.partnership-filter.active {
  background: var(--bloomberg-blue);
  color: white;
  border-color: var(--bloomberg-blue);
}

/* Partnership Connection Interface */
.partnership-connection-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  padding: var(--space-lg);
}

.partnership-connection-content {
  background: linear-gradient(145deg, var(--bloomberg-gray-800), var(--bloomberg-gray-900));
  border: 1px solid var(--bloomberg-blue-light);
  border-radius: var(--radius-lg);
  padding: var(--space-2xl);
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.partnership-connection-header {
  text-align: center;
  margin-bottom: var(--space-2xl);
  padding-bottom: var(--space-lg);
  border-bottom: 1px solid var(--bloomberg-gray-700);
}

.partnership-connection-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  margin-bottom: var(--space-sm);
}

.partnership-connection-subtitle {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
}

.partnership-connection-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.partnership-form-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-md);
}

/* Crisis Response Styling for Partnership */
.partnership-crisis-banner {
  background: linear-gradient(135deg, #dc2626, #991b1b);
  color: #ffffff;
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-2xl);
  text-align: center;
  border: 2px solid #ffd700;
  position: relative;
  overflow: hidden;
}

.partnership-crisis-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: crisis-shine 3s infinite;
}

@keyframes crisis-shine {
  0% { left: -100%; }
  100% { left: 100%; }
}

.partnership-crisis-title {
  font-size: 1.5rem;
  font-weight: 900;
  margin-bottom: var(--space-sm);
  letter-spacing: 0.05em;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.partnership-crisis-subtitle {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: var(--space-lg);
}

.partnership-crisis-actions {
  display: flex;
  gap: var(--space-md);
  justify-content: center;
  flex-wrap: wrap;
}

.partnership-crisis-btn {
  background: #ffd700;
  color: #000000;
  padding: var(--space-md) var(--space-xl);
  border-radius: var(--radius-md);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.025em;
  text-decoration: none;
  transition: all var(--transition-fast);
  border: 2px solid #ffd700;
}

.partnership-crisis-btn:hover {
  background: #ffffff;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4);
}

/* ===== RESPONSIVE ADJUSTMENTS FOR PARTNERSHIP ===== */
@media (max-width: 1024px) {
  .partnership-ecosystem-grid {
    grid-template-columns: repeat(auto-fit, 350px);
    gap: var(--space-md);
  }
  
  .partnership-network-stats {
    grid-template-columns: repeat(auto-fit, 140px);
    gap: var(--space-md);
  }
  
  .partnership-controls {
    flex-direction: column;
    align-items: stretch;
  }
  
  .partnership-search {
    min-width: unset;
  }
}

@media (max-width: 768px) {
  .partnership-ecosystem-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }
  
  .partnership-metrics {
    grid-template-columns: 1fr;
  }
  
  .partnership-actions {
    flex-direction: column;
  }
  
  .partnership-network-stats {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .partnership-filters {
    justify-content: center;
    width: 100%;
  }
  
  .partnership-connection-content {
    margin: var(--space-md);
    padding: var(--space-lg);
  }
  
  .partnership-form-row {
    grid-template-columns: 1fr;
  }
  
  .partnership-crisis-actions {
    flex-direction: column;
    align-items: stretch;
  }
}

/* ===== SALES OPERATIONS STYLING ===== */
.sales-operations-dashboard {
  width: 100%;
}

.leads-table {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.lead-row {
  background: var(--bloomberg-gray-800);
  border: 1px solid var(--bloomberg-gray-700);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  transition: var(--transition-fast);
}

.lead-row:hover {
  background: var(--bloomberg-gray-750);
  border-color: var(--bloomberg-blue);
}

.lead-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.lead-company {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
}

.lead-details {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
}

.lead-specialist {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-500);
}

.lead-metrics {
  text-align: center;
}

.lead-savings {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--bloomberg-green);
}

.lead-commission {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
}

.lead-actions {
  text-align: right;
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

/* Specialist Network Styling */
.specialist-card {
  background: var(--bloomberg-gray-800);
  border: 1px solid var(--bloomberg-gray-700);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  margin-bottom: var(--space-md);
}

.specialist-header {
  display: flex;
  justify-content: between;
  align-items: center;
  margin-bottom: var(--space-sm);
}

.specialist-info {
  flex: 1;
}

.specialist-name {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
}

.specialist-location {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
}

.specialist-status.available {
  background: var(--bloomberg-green);
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
}

.specialist-status.busy {
  background: var(--bloomberg-orange);
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
}

.specialist-specialty {
  font-size: 0.875rem;
  color: var(--bloomberg-blue);
  margin-bottom: var(--space-xs);
}

.specialist-metrics {
  display: flex;
  gap: var(--space-md);
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
}

.specialist-performance {
  margin-top: var(--space-sm);
}

.performance-metric {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.25rem 0;
  font-size: 0.875rem;
}

.metric-label {
  color: var(--bloomberg-gray-400);
}

.metric-value {
  color: var(--bloomberg-gray-100);
  font-weight: 500;
}

/* Sales Chat Bot Styling */
.sales-chat-container {
  background: var(--bloomberg-gray-900);
  border: 1px solid var(--bloomberg-gray-700);
  color: var(--bloomberg-gray-100);
}

.sales-chat-header {
  background: linear-gradient(135deg, var(--bloomberg-blue), var(--bloomberg-green));
}

.sales-chat-message.bot {
  background: var(--bloomberg-gray-700);
  border: 1px solid var(--bloomberg-gray-600);
  color: var(--bloomberg-gray-100);
}

.sales-chat-message.user {
  background: var(--bloomberg-blue);
  color: white;
}

.sales-chat-message.system {
  background: var(--bloomberg-orange);
  color: white;
  text-align: center;
}

/* Action Cards */
.bloomberg-action-card {
  background: var(--bloomberg-gray-800);
  border: 1px solid var(--bloomberg-gray-700);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  text-decoration: none;
  color: var(--bloomberg-gray-100);
  transition: var(--transition-fast);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: var(--space-sm);
}

.bloomberg-action-card:hover {
  background: var(--bloomberg-gray-750);
  border-color: var(--bloomberg-blue);
  transform: translateY(-2px);
}

.bloomberg-action-icon {
  font-size: 2rem;
  margin-bottom: var(--space-sm);
}

.bloomberg-action-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: var(--space-xs);
}

.bloomberg-action-description {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
  line-height: 1.4;
}

/* Tab Content Styling */
.bloomberg-tab-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.bloomberg-tab-name {
  font-weight: 500;
}

.bloomberg-tab-description {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  opacity: 0.8;
}

/* Integration Features */
.bloomberg-integration-feature {
  padding: var(--space-md);
  background: var(--bloomberg-gray-800);
  border-radius: var(--radius-sm);
}

/* Metric Cards */
.bloomberg-metric-card.bloomberg-metric-compact {
  padding: var(--space-sm);
  min-width: 120px;
}

.bloomberg-metric-small {
  text-align: center;
  padding: var(--space-sm);
}

.bloomberg-metric-small .bloomberg-metric-value {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
}

.bloomberg-metric-small .bloomberg-metric-label {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  margin-top: var(--space-xs);
}

/* Search Container */
.bloomberg-search-container {
  position: relative;
  flex: 1;
}

.bloomberg-search-icon {
  position: absolute;
  left: var(--space-sm);
  top: 50%;
  transform: translateY(-50%);
  color: var(--bloomberg-gray-400);
  pointer-events: none;
}

/* Progress Bars */
.bloomberg-progress-bar {
  width: 100%;
  height: 8px;
  background: var(--bloomberg-gray-700);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.bloomberg-progress-fill {
  height: 100%;
  background: var(--bloomberg-green);
  transition: width var(--transition-normal);
}

/* Status Badges */
.bloomberg-status.bloomberg-status-sm {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
}

/* Responsive Sales Operations */
@media (max-width: 768px) {
  .leads-table .lead-row .bloomberg-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
    text-align: left;
  }
  
  .lead-actions {
    text-align: left;
  }
  
  .bloomberg-action-card {
    text-align: left;
    flex-direction: row;
    align-items: flex-start;
  }
  
  .bloomberg-action-icon {
    font-size: 1.5rem;
    margin-bottom: 0;
    margin-right: var(--space-sm);
  }
}

/* ===== RESPONSIVE ADJUSTMENTS FOR DASHBOARD ===== */
@media (max-width: 1024px) {
  .widget-row {
    grid-template-columns: 400px;
    justify-content: center;
  }
  
  .metrics-grid {
    grid-template-columns: repeat(auto-fit, 300px);
    justify-content: center;
  }
  
  .recommendation-impact {
    grid-template-columns: repeat(auto-fit, 120px);
    justify-content: center;
  }
}

@media (max-width: 768px) {
  .executive-dashboard-container {
    padding: var(--space-md);
  }
  
  .metrics-grid {
    grid-template-columns: 280px;
    justify-content: center;
    gap: var(--space-md);
  }
  
  .widget-row {
    grid-template-columns: 1fr;
    justify-content: center;
  }
  
  .metric-value {
    font-size: 2rem;
  }
  
  .widget-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
  }
  
  .position-overview {
    grid-template-columns: 200px;
    justify-content: center;
  }
  
  .risk-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .risk-level {
    width: 100%;
  }
  
  /* Side navigation mobile adjustments */
  .bloomberg-side-nav {
    width: 100%;
    position: fixed;
    top: 0;
    left: -100%;
    z-index: 1000;
    transition: left var(--transition-normal);
  }
  
  .bloomberg-side-nav.open {
    left: 0;
  }
  
  .triangle-layout {
    flex-direction: column;
  }
  
  .main-content {
    padding: var(--space-md);
  }
}

/* ===== TAB NAVIGATION SYSTEM ===== */
.bloomberg-tabs {
  display: flex;
  gap: var(--space-sm);
  border-bottom: 1px solid var(--bloomberg-gray-700);
  margin-bottom: var(--space-lg);
  overflow-x: auto;
}

.bloomberg-tab {
  background: transparent;
  border: 1px solid transparent;
  border-bottom: none;
  color: var(--bloomberg-gray-400);
  padding: var(--space-md) var(--space-lg);
  border-radius: var(--radius-md) var(--radius-md) 0 0;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-fast);
  position: relative;
  white-space: nowrap;
  min-width: 120px;
  text-align: center;
}

.bloomberg-tab:hover {
  color: var(--bloomberg-gray-100);
  background: var(--bloomberg-gray-800);
  border-color: var(--bloomberg-gray-600);
}

.bloomberg-tab.active {
  color: var(--bloomberg-blue);
  background: var(--bloomberg-gray-800);
  border-color: var(--bloomberg-gray-600);
  border-bottom-color: var(--bloomberg-gray-800);
  position: relative;
}

.bloomberg-tab.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--bloomberg-blue);
}

.bloomberg-tab-icon {
  margin-right: var(--space-sm);
  font-size: 1rem;
}

/* ===== FLEXBOX UTILITIES ===== */
.bloomberg-justify-between { justify-content: space-between; }
.bloomberg-items-center { align-items: center; }
.bloomberg-items-start { align-items: flex-start; }
.bloomberg-items-end { align-items: flex-end; }
.bloomberg-gap-xs { gap: var(--space-xs); }
.bloomberg-gap-sm { gap: var(--space-sm); }
.bloomberg-gap-md { gap: var(--space-md); }
.bloomberg-gap-lg { gap: var(--space-lg); }
.bloomberg-gap-xl { gap: var(--space-xl); }

/* ===== CURSOR UTILITIES ===== */
.bloomberg-cursor-pointer { cursor: pointer; }
.bloomberg-cursor-not-allowed { cursor: not-allowed; }

/* ===== BORDER UTILITIES ===== */
.bloomberg-border-info { border-color: var(--bloomberg-blue); }
.bloomberg-border-success { border-color: var(--bloomberg-green); }
.bloomberg-border-warning { border-color: var(--bloomberg-yellow); }
.bloomberg-border-error { border-color: var(--bloomberg-red); }
.bloomberg-border-bottom { border-bottom: 1px solid var(--bloomberg-gray-700); }

/* ===== PADDING UTILITIES ===== */
.bloomberg-py-xs { padding-top: var(--space-xs); padding-bottom: var(--space-xs); }
.bloomberg-py-sm { padding-top: var(--space-sm); padding-bottom: var(--space-sm); }
.bloomberg-py-md { padding-top: var(--space-md); padding-bottom: var(--space-md); }
.bloomberg-py-lg { padding-top: var(--space-lg); padding-bottom: var(--space-lg); }
.bloomberg-py-xl { padding-top: var(--space-xl); padding-bottom: var(--space-xl); }

/* ===== NAVIGATION BREADCRUMB ===== */
.bloomberg-nav-breadcrumb {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
}

.bloomberg-nav-separator {
  color: var(--bloomberg-gray-600);
  font-weight: 400;
}

.bloomberg-nav-current {
  color: var(--bloomberg-gray-100);
  font-weight: 600;
}

/* ===== BADGE SYSTEM ===== */
.bloomberg-badge {
  display: inline-block;
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.025em;
  color: white;
  background: var(--bloomberg-gray-600);
}

/* ===== MARGIN UTILITIES ===== */
.bloomberg-ml-sm { margin-left: var(--space-sm); }
.bloomberg-mr-sm { margin-right: var(--space-sm); }

/* ===== UNIVERSAL LAYOUT CONSISTENCY ===== */
/* Global layout standards for ALL pages */

/* Main Page Container - Unified Background */
.bloomberg-page-container {
  min-height: 100vh;
  background: var(--bloomberg-gray-900);
  background-image: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), 
                    url('/image/datos-financieros.jpg');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  color: var(--bloomberg-gray-100);
}

/* Unified Navigation Structure */
.bloomberg-universal-nav {
  background: var(--bloomberg-black);
  border-bottom: 1px solid var(--bloomberg-gray-700);
  padding: var(--space-md) 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.bloomberg-universal-nav .bloomberg-nav-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--space-md);
}

.bloomberg-universal-nav .bloomberg-nav-brand {
  font-size: 1.25rem;
  font-weight: 700;
  color: #ffffff;
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  min-width: fit-content;
}

.bloomberg-universal-nav .bloomberg-nav-links {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  flex-wrap: wrap;
}

.bloomberg-universal-nav .bloomberg-nav-link {
  color: #ffffff;
  text-decoration: none;
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
  font-weight: 500;
  white-space: nowrap;
}

.bloomberg-universal-nav .bloomberg-nav-link:hover {
  color: var(--bloomberg-gray-100);
  background: var(--bloomberg-gray-700);
}

/* Unified Hero Section */
.bloomberg-universal-hero {
  padding: var(--space-2xl) 0;
  background: transparent;
  color: var(--bloomberg-gray-100);
  text-align: center;
}

.bloomberg-universal-hero-content {
  max-width: 1000px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.bloomberg-universal-hero-title {
  font-size: 3rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  margin-bottom: var(--space-lg);
  line-height: 1.2;
  letter-spacing: -0.025em;
}

.bloomberg-universal-hero-subtitle {
  font-size: 1.25rem;
  color: var(--bloomberg-gray-300);
  margin-bottom: var(--space-2xl);
  line-height: 1.6;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.bloomberg-universal-hero-actions {
  display: flex;
  justify-content: center;
  gap: var(--space-lg);
  flex-wrap: wrap;
}

/* Unified Content Section */
.bloomberg-universal-section {
  padding: var(--space-2xl) 0;
}

.bloomberg-universal-section-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

/* Layout Bridge Classes - Consistent Containers */
.bloomberg-main-content {
  min-height: 100vh;
  background: transparent;
  color: var(--bloomberg-gray-100);
}

.bloomberg-content-wrapper {
  max-width: 1400px;
  margin: 0 auto;
  padding: var(--space-lg);
}

/* Status Bar Consistency */
.bloomberg-universal-status-bar {
  background: var(--bloomberg-gray-900);
  border-bottom: 1px solid var(--bloomberg-gray-700);
  padding: var(--space-md) 0;
  margin: 0;
}

.bloomberg-universal-status-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

/* Unified Card System */
.bloomberg-universal-card {
  background: linear-gradient(145deg, var(--bloomberg-gray-800), var(--bloomberg-gray-900));
  border: 1px solid var(--bloomberg-blue-light);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  transition: all var(--transition-fast);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.bloomberg-universal-card:hover {
  border-color: var(--bloomberg-blue);
  transform: translateY(-2px);
  box-shadow: 0 10px 15px -3px rgba(14, 165, 233, 0.1), 0 4px 6px -2px rgba(14, 165, 233, 0.05);
}

/* Unified Typography Scale */
.bloomberg-heading-primary {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  line-height: 1.2;
  letter-spacing: -0.025em;
  margin-bottom: var(--space-lg);
}

.bloomberg-heading-secondary {
  font-size: 1.875rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
  line-height: 1.3;
  letter-spacing: -0.025em;
  margin-bottom: var(--space-md);
}

.bloomberg-heading-tertiary {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
  line-height: 1.3;
  margin-bottom: var(--space-md);
}

.bloomberg-subtitle-primary {
  font-size: 1.125rem;
  color: var(--bloomberg-gray-300);
  line-height: 1.6;
  margin-bottom: var(--space-lg);
}

.bloomberg-subtitle-secondary {
  font-size: 1rem;
  color: var(--bloomberg-gray-400);
  line-height: 1.5;
  margin-bottom: var(--space-md);
}

/* Unified Grid System */
.bloomberg-universal-grid {
  display: grid;
  gap: var(--space-lg);
  width: 100%;
}

.bloomberg-universal-grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.bloomberg-universal-grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.bloomberg-universal-grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

.bloomberg-universal-grid-auto {
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
}

/* Journey Page Specific Layout */
.bloomberg-journey-layout {
  display: flex;
  min-height: 100vh;
  background: var(--bloomberg-gray-900);
  color: white;
}

.bloomberg-journey-content {
  flex: 1;
  background: transparent;
  min-height: 100vh;
}

/* Marketing to Foundation Bridge */
.bloomberg-marketing-to-foundation-bridge {
  background: linear-gradient(
    180deg, 
    var(--bloomberg-gray-900) 0%, 
    var(--bloomberg-gray-900) 100%
  );
  border-top: 2px solid var(--bloomberg-blue);
  padding: var(--space-md) 0;
  text-align: center;
}

.bloomberg-marketing-to-foundation-bridge-content {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.bloomberg-transition-message {
  font-size: 1rem;
  color: var(--bloomberg-blue);
  font-weight: 600;
  margin-bottom: var(--space-sm);
}

.bloomberg-transition-subtitle {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
}

/* Responsive Adjustments for Universal Components */
@media (max-width: 1024px) {
  .bloomberg-universal-grid-4 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .bloomberg-universal-grid-3 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .bloomberg-universal-hero-title {
    font-size: 2.5rem;
  }
  
  .bloomberg-heading-primary {
    font-size: 2rem;
  }
}

@media (max-width: 768px) {
  .bloomberg-universal-nav .bloomberg-nav-container {
    padding: 0 var(--space-md);
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .bloomberg-universal-nav .bloomberg-nav-links {
    justify-content: center;
    width: 100%;
  }
  
  .bloomberg-universal-grid-4,
  .bloomberg-universal-grid-3,
  .bloomberg-universal-grid-2 {
    grid-template-columns: 1fr;
  }
  
  .bloomberg-universal-hero-title {
    font-size: 2rem;
  }
  
  .bloomberg-heading-primary {
    font-size: 1.75rem;
  }
  
  .bloomberg-universal-hero-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .bloomberg-content-wrapper {
    padding: var(--space-md);
  }
  
  .bloomberg-universal-section-container {
    padding: 0 var(--space-md);
  }
}

/* ===== CRISIS ALERT STANDARDIZATION ===== */
.bloomberg-universal-crisis-banner {
  background: linear-gradient(135deg, #dc2626, #991b1b);
  color: #ffffff;
  padding: var(--space-md) 0;
  text-align: center;
  font-weight: 700;
  letter-spacing: 0.025em;
  border-bottom: 2px solid #ffd700;
  position: relative;
  z-index: 200;
}

.bloomberg-universal-crisis-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--space-md);
}

.bloomberg-universal-crisis-message {
  font-size: 1rem;
  flex: 1;
  min-width: 300px;
}

.bloomberg-universal-crisis-status {
  background: rgba(255, 255, 255, 0.2);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.875rem;
  font-weight: 600;
  white-space: nowrap;
}

/* ===== BUTTON STANDARDIZATION ===== */
.bloomberg-universal-btn {
  display: inline-flex;
  align-items: center;
  gap: var(--space-sm);
  padding: var(--space-sm) var(--space-lg);
  border: 1px solid transparent;
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  font-weight: 600;
  text-decoration: none;
  cursor: pointer;
  transition: all var(--transition-fast);
  white-space: nowrap;
  text-align: center;
  min-width: fit-content;
}

.bloomberg-universal-btn-primary {
  background: linear-gradient(135deg, var(--bloomberg-blue), var(--bloomberg-blue-light));
  color: white;
  border-color: var(--bloomberg-blue);
  box-shadow: 0 4px 14px 0 rgba(14, 165, 233, 0.3);
}

.bloomberg-universal-btn-primary:hover {
  background: linear-gradient(135deg, var(--bloomberg-blue-dark), var(--bloomberg-blue));
  border-color: var(--bloomberg-blue-dark);
  transform: translateY(-1px);
  box-shadow: 0 6px 20px 0 rgba(14, 165, 233, 0.4);
}

.bloomberg-universal-btn-secondary {
  background: transparent;
  color: var(--bloomberg-gray-300);
  border-color: var(--bloomberg-gray-600);
}

.bloomberg-universal-btn-secondary:hover {
  background: var(--bloomberg-gray-700);
  color: var(--bloomberg-gray-100);
  border-color: var(--bloomberg-gray-500);
}

.bloomberg-universal-btn-large {
  padding: var(--space-lg) var(--space-2xl);
  font-size: 1rem;
}

/* ===== BUTTON SIZE UTILITIES ===== */
.bloomberg-btn-sm {
  padding: var(--space-xs) var(--space-sm);
  font-size: 0.75rem;
}

/* ===== BUSINESS CONTEXT MISMATCH DETECTION ===== */
.context-indicator-panel {
  background: rgba(14, 165, 233, 0.1);
  border: 1px solid rgba(14, 165, 233, 0.2);
  border-radius: 6px;
  padding: var(--space-sm) var(--space-md);
  margin: var(--space-sm) 0;
}

.context-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 0.875rem;
  color: var(--bloomberg-blue);
}

.context-change-btn {
  padding: 4px 12px;
  background: var(--bloomberg-blue);
  color: white;
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 500;
  transition: background-color var(--transition-fast);
}

.context-change-btn:hover {
  background: var(--bloomberg-blue-dark);
}

.mismatch-warning-panel {
  margin-top: var(--space-sm);
}

.mismatch-alert {
  background: rgba(234, 179, 8, 0.1);
  border: 1px solid rgba(234, 179, 8, 0.3);
  border-radius: 6px;
  padding: var(--space-sm) var(--space-md);
  display: flex;
  align-items: flex-start;
  gap: var(--space-sm);
}

.mismatch-icon {
  font-size: 1.125rem;
  margin-top: 2px;
}

.mismatch-content {
  flex: 1;
}

.mismatch-content strong {
  color: #eab308;
  font-size: 0.875rem;
  display: block;
  margin-bottom: 4px;
}

.mismatch-details {
  font-size: 0.8125rem;
  color: var(--bloomberg-gray-300);
  margin-bottom: var(--space-sm);
  line-height: 1.4;
}

.mismatch-action-btn {
  display: inline-block;
  padding: 6px 12px;
  background: #eab308;
  color: #000;
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 600;
  transition: all var(--transition-fast);
}

.mismatch-action-btn:hover {
  background: #ca8a04;
  transform: translateY(-1px);
}
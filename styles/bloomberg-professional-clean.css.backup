  margin-bottom: var(--space-sm);
}

.metric-change {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  font-size: 0.875rem;
  font-weight: 600;
}

.metric-change.positive {
  color: var(--bloomberg-green);
}

.metric-change.negative {
  color: var(--bloomberg-red);
}

.metric-change.neutral {
  color: var(--bloomberg-gray-400);
}

.change-icon {
  width: 16px;
  height: 16px;
}

/* ===== DASHBOARD WIDGETS ===== */
.dashboard-widgets {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.widget-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, 400px);
  justify-content: center;
  gap: var(--space-lg);
}

.dashboard-widget {
  background: linear-gradient(145deg, var(--bloomberg-gray-800), var(--bloomberg-gray-900));
  border: 1px solid var(--bloomberg-gray-700);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  transition: all var(--transition-fast);
}

.dashboard-widget.recommended {
  border-color: var(--bloomberg-green);
  background: linear-gradient(145deg, 
    rgba(34, 197, 94, 0.1), 
    var(--bloomberg-gray-800)
  );
}

.widget-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-lg);
  padding-bottom: var(--space-md);
  border-bottom: 1px solid var(--bloomberg-gray-700);
}

.widget-title {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
}

.widget-icon {
  width: 20px;
  height: 20px;
  color: var(--bloomberg-blue);
}

.widget-actions {
  display: flex;
  gap: var(--space-sm);
}

.widget-btn {
  background: transparent;
  border: 1px solid var(--bloomberg-gray-600);
  color: var(--bloomberg-gray-300);
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-md);
  font-size: 0.875rem;

  border-bottom: 1px solid var(--bloomberg-gray-700);
}

.brand-icon {
  width: 32px;
  height: 32px;
  background: linear-gradient(135deg, var(--bloomberg-blue), var(--bloomberg-blue-light));
  border-radius: var(--radius-md);
}

.brand-text {
  flex: 1;
}

.brand-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  line-height: 1;
}

.brand-subtitle {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);

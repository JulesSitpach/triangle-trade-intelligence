.triangle-layout {
  display: flex;
  min-height: 100vh;
  background: var(--bloomberg-gray-900);
  color: white;
}

.main-content {
  flex: 1;
  padding: var(--space-lg);
  overflow-y: auto;
}

.foundation-layout {
  width: 100%;
  padding: 0 var(--space-lg);
}

.foundation-layout-centered {
  max-width: 1200px;
  margin: 0 auto;
}

.foundation-workspace {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: var(--space-xl);
  background: transparent;
  align-items: start;
}

.foundation-form-section {
  background: transparent;
  padding: var(--space-xl);
  border-radius: var(--radius-lg);
}

.foundation-intelligence-panel {
  background: var(--bloomberg-gray-800);
  border: 1px solid var(--bloomberg-blue-light);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
}

/* ===== EXECUTIVE DASHBOARD STYLES ===== */
.executive-dashboard-container {
  width: 100%;
  padding: var(--space-lg);
}

.executive-dashboard-container-centered {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: var(--space-lg);
}

.executive-metrics-hero {
  margin-bottom: var(--space-2xl);
}

.metrics-grid {

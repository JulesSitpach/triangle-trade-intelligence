  transition: all var(--transition-fast);
}

.widget-btn:hover {
  border-color: var(--bloomberg-blue);
  color: var(--bloomberg-gray-100);
}

.recommendation-priority {
  background: var(--bloomberg-red);
  color: white;
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* ===== POSITION OVERVIEW ===== */
.position-overview {
  display: grid;
  grid-template-columns: repeat(auto-fit, 200px);
  justify-content: center;
  gap: var(--space-md);
}

.position-metric {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.position-label {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

.position-value {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
  font-family: var(--font-data);
}

.position-value.negative {
  color: var(--bloomberg-red);
}

.position-value.warning {
  color: var(--bloomberg-yellow);
}

/* ===== RECOMMENDATION CONTENT ===== */
.recommendation-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.recommendation-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
  margin-bottom: var(--space-md);
}

.recommendation-impact {
  display: grid;
  grid-template-columns: repeat(auto-fit, 120px);
  justify-content: center;
  gap: var(--space-md);
}

.impact-metric {
  text-align: center;
  padding: var(--space-md);
  background: var(--bloomberg-gray-900);
  border-radius: var(--radius-md);
  border: 1px solid var(--bloomberg-gray-700);
}

.impact-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--bloomberg-green);
  font-family: var(--font-data);
  line-height: 1;
}

.impact-label {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-top: var(--space-xs);
}

.recommendation-timeline {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.timeline-item {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-sm);
  border-radius: var(--radius-md);
  background: var(--bloomberg-gray-900);
}

.timeline-item.active {
  border-left: 3px solid var(--bloomberg-green);
}

.timeline-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--bloomberg-green);
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-weight: 600;
  color: var(--bloomberg-gray-100);
  font-size: 0.875rem;
}

.timeline-subtitle {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  margin-top: var(--space-xs);
}

/* ===== RISK INDICATORS ===== */
.risk-status-indicator {
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.risk-status-indicator.status-medium {
  background: rgba(255, 170, 0, 0.2);
  color: var(--bloomberg-yellow);
  border: 1px solid var(--bloomberg-yellow);
}

.risk-indicators {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.risk-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-md);
}

.risk-category {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-300);
  font-weight: 500;
  min-width: 80px;
}

.risk-level {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  flex: 1;
}

.risk-bar {
  flex: 1;
  height: 6px;
  background: var(--bloomberg-gray-700);
  border-radius: 3px;
  overflow: hidden;
}

.risk-fill {
  height: 100%;
  transition: width var(--transition-normal);
}

.risk-fill.success {
  background: var(--bloomberg-green);
}

.risk-fill.warning {
  background: var(--bloomberg-yellow);
}

.risk-fill.error {
  background: var(--bloomberg-red);
}

.risk-score {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  font-family: var(--font-data);
  min-width: 40px;
  text-align: right;
}

/* ===== INTELLIGENCE SCORE ===== */
.intelligence-score {
  background: var(--bloomberg-blue);
  color: white;
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: 0.875rem;
  font-weight: 700;
  font-family: var(--font-data);
}

/* ===== MARKET INSIGHTS ===== */
.market-insights {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.insight-item {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-sm);
  border-radius: var(--radius-md);
  background: var(--bloomberg-gray-900);
}

.insight-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
}

.insight-indicator.success {
  background: var(--bloomberg-green);
}

.insight-indicator.warning {
  background: var(--bloomberg-yellow);
}

.insight-indicator.info {
  background: var(--bloomberg-blue);
}

.insight-content {
  flex: 1;
}

.insight-title {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-300);
  font-weight: 500;
}

.insight-value {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  margin-top: var(--space-xs);
}

/* ===== QUICK ACTIONS ===== */
.quick-actions-widget {
  background: linear-gradient(145deg, var(--bloomberg-gray-800), var(--bloomberg-gray-900));
  border: 1px solid var(--bloomberg-gray-700);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
}

.action-items {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.action-item {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-md);
  background: var(--bloomberg-gray-900);
  border-radius: var(--radius-md);
  border-left: 3px solid transparent;
  transition: all var(--transition-fast);
}

.action-item.priority-high {
  border-left-color: var(--bloomberg-red);
}

.action-item.priority-medium {
  border-left-color: var(--bloomberg-yellow);
}

.action-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--bloomberg-red);
  flex-shrink: 0;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
}

.action-details {
  font-size: 0.75rem;
  color: var(--bloomberg-gray-400);
  margin-top: var(--space-xs);
}

.action-time {
  font-size: 0.75rem;
  color: var(--bloomberg-blue);
  font-weight: 600;
  font-family: var(--font-data);
}

/* ===== STAGE 1 INTELLIGENCE DASHBOARD STYLES ===== */
.bloomberg-section-subtitle {
  font-size: 1rem;
  color: var(--bloomberg-gray-400);
  margin-bottom: var(--space-lg);
  line-height: 1.6;
}

.bloomberg-grid-5 { grid-template-columns: repeat(5, 300px); justify-content: center; }
.bloomberg-grid-6 { grid-template-columns: repeat(6, 300px); justify-content: center; }

.progress-bar {
  width: 100%;
  height: 8px;
  background: var(--bloomberg-gray-700);
  border-radius: 4px;
  overflow: hidden;
  margin: var(--space-md) 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--bloomberg-blue), var(--bloomberg-green));
  transition: width var(--transition-normal);
}

.form-section {
  background: var(--bloomberg-gray-800);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--bloomberg-gray-700);
}

.section-title {
  font-size: 1rem;
  font-weight: 600;
  color: var(--bloomberg-gray-100);
  margin-bottom: var(--space-md);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.bloomberg-status-info {
  background: rgba(14, 165, 233, 0.1);
  color: var(--bloomberg-blue);
  border: 1px solid rgba(14, 165, 233, 0.2);
}

.bloomberg-metric-neutral {
  color: var(--bloomberg-gray-400);
}

/* ===== FOUNDATION PAGE STYLES ===== */
.page-content {
  min-height: 100vh;
  background: transparent;
  padding: var(--space-lg) 0;
}

.dashboard-grid {
  width: 100%;
  padding: 0 var(--space-lg);
}

.dashboard-grid-centered {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.bloomberg-grid-span-2 {
  grid-column: span 2;
}

.bloomberg-hero-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--bloomberg-gray-100);
  margin-bottom: var(--space-lg);
  line-height: 1.2;
}

.bloomberg-hero-subtitle {
  font-size: 1.125rem;
  color: var(--bloomberg-gray-300);
  line-height: 1.6;
  margin-bottom: var(--space-lg);
}

.bloomberg-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.section-icon {
  font-size: 1.5rem;
  margin-right: var(--space-sm);
}

.section-content {
  flex: 1;
}

.section-subtitle {
  font-size: 0.875rem;
  color: var(--bloomberg-gray-400);
  margin-top: var(--space-xs);
}

.required::after {
  content: ' *';
  color: var(--bloomberg-red);
}

/* ===== FOUNDATION RESPONSIVE STYLES ===== */
@media (max-width: 1024px) {
  .bloomberg-grid-span-2 { grid-column: span 1; }
  .bloomberg-grid-5, .bloomberg-grid-6 { grid-template-columns: repeat(3, 300px); justify-content: center; }
}
@media (max-width: 768px) {
  .page-content { padding: var(--space-md) 0; }
  .dashboard-grid { padding: 0 var(--space-md); }
  .bloomberg-hero-title { font-size: 2rem; }
  .bloomberg-grid-5, .bloomberg-grid-6 { grid-template-columns: repeat(2, 280px); justify-content: center; }
}
@media (max-width: 480px) {
  .bloomberg-grid-5, .bloomberg-grid-6 { grid-template-columns: 1fr; justify-content: center; }
}


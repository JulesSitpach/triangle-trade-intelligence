{
  "buildCommand": "SKIP_TYPE_CHECK=true next build --no-lint",
  "framework": "nextjs",
  "functions": {
    "pages/api/cron/rss-polling.js": {
      "maxDuration": 60
    },
    "pages/api/cron/apply-policy-tariff-changes.js": {
      "maxDuration": 60
    },
    "pages/api/cron/validate-tariff-health.js": {
      "maxDuration": 60
    }
  },
  "env": {
    "ESLINT_NO_DEV_ERRORS": "true",
    "DISABLE_ESLINT_PLUGIN": "true",
    "SKIP_ENV_VALIDATION": "true",
    "SKIP_TYPE_CHECK": "true"
  },
  "crons": [
    {
      "path": "/api/cron/rss-polling",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/send-daily-tariff-digest",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/flag-stale-policy-rates",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/sync-section301-from-federal-register",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/sync-section232",
      "schedule": "30 6 * * *"
    },
    {
      "path": "/api/cron/sync-mfn-rates",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron/apply-policy-tariff-changes",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/cron/validate-tariff-health",
      "schedule": "0 9 * * *"
    }
  ]
}
